<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/dengRu"
        android:padding="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="50dp"
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/yongHu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/dengRu"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_one_color"
        android:hint="请输入账号："
        android:textColorHint="#9FE9F3"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:drawableLeft="@drawable/icon_user_off"
        android:drawablePadding="10dp"/>
    <EditText
        android:id="@+id/miMa"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/yongHu"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_one_color"
        android:hint="请输入密码："
        android:textColorHint="#9FE9F3"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:drawableLeft="@drawable/icon_password_off"
        android:drawablePadding="10dp"/>

    <Button
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_problem"
        android:background="#00000000"
        android:text="登录遇到问题？"
        android:textColor="#4A000000"
        android:layout_below="@+id/miMa"
        android:textSize="14sp"/>
    <Button
        android:id="@+id/click_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/miMa"
        android:layout_marginTop="50dp"
        android:background="#0291D1"
        android:gravity="center"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="20dp"
        />

</RelativeLayout>